
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="relative">
    <nav>
        <!-- breadcrumb -->
        <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
            <li class="text-sm leading-normal">
                <a class="opacity-50 text-slate-700" href="javascript:;">Category</a>
            </li>
            <li class="text-sm pl-2 capitalize leading-normal text-slate-700 before:float-left before:pr-2 before:text-gray-600 before:content-['/']" aria-current="page">
                Update Category
            </li>
        </ol>
    </nav>
    <br />
    <div class="flex-none w-1/2 max-w-full px-3 text-left">
        <button type="submit" href="/Admin/Category/CategoryList" class="inline-block px-8 py-2 mb-0 font-bold text-left uppercase align-left transition-all bg-transparent border border-solid rounded-lg shadow-none cursor-pointer leading-pro ease-soft-in text-xs bg-150 active:opacity-85 hover:scale-102 tracking-tight-soft bg-x-25 border-fuchsia-500 text-fuchsia-500 hover:opacity-75">
            View Categories
        </button>
    </div>

</div>


<div class="flex flex-wrap -mx-3">
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                <h6>Update Category</h6>
            </div>
            @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
            <div class="flex-auto px-0 pt-0 pb-2">

                <div class="p-0 overflow-x-auto">
                    @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.Partial("Partial/CategoryForm")
                    }
                </div>
            </div>
        </div>
    </div>
</div>